<resources>

    <style name="Base.Theme.STOCK" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
    </style>

    <style name="bottomDefaultNav" parent="Widget.Design.BottomNavigationView" />

    <style name="matchMatch_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="matchWrap_" parent="matchMatch_">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapWrap_">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="matchMatchWithPadding_" parent="matchMatch_">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="subTitle_" parent="wrapWrap_">
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="mainLoginInfoTitle_">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/tango</item>
    </style>

    <style name="mainInfoTitle_" parent="mainLoginInfoTitle_">
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionRoundedBtn_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/action_rounded_btn</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionRoundedBtnGreen_" parent="actionRoundedBtn_">
        <item name="android:background">@drawable/action_rounded_btn_green</item>
    </style>

    <style name="updateTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/update</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="floatingActionBtn_">
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
