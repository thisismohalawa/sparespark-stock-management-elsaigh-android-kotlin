<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/matchMatchWithPadding_">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/img_team"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/mainLoginInfoTitle_"
        android:text="@string/let_s_work"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />

    <TextView
        style="@style/mainLoginInfoTitle_"
        android:text="@string/together"
        android:textSize="@dimen/_18ssp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        style="@style/actionRoundedBtn_"
        android:layout_margin="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txt_sign_status"
        style="@style/subTitle_"
        android:layout_gravity="center" />

    <ProgressBar
        android:id="@+id/progress_circular"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>
